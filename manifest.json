{
  "manifest_version": 3,
  "name": "Notion 할일 리스트",
  "version": "1.0",
  "description": "노션 페이지의 할일블럭 내용을 크롬 확장 프로그램에서 보여줍니다.",
  "permissions": ["activeTab", "storage"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.notion.so/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ]
}
